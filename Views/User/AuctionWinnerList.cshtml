@model ProjectIepAuction.Models.View.AuctionWinnerList

@{
    ViewData["Title"] = "Auction list";
}

@if(Model.auctionList.Any()){

<h1>Winner auction list</h1><hr>

<div class="album">
  <div class="container">
    <div class="row">
    

    @foreach(var auction in Model.auctionList){       
        string base64 = Convert.ToBase64String(auction.image);
        <div id="@auction.Id" class="col-md-3">
        <div class="card mb-2 box-shadow">
                <img class="card-img-top" src="data:image/png;base64, @base64" alt="Card image cap" />
                <div class = "card-header">
                    User Id : @auction.Id;
                </div>
                <div class = "card-body">
                    <h5 class = "card-title">@auction.name</h5>
                    <br>
                    @auction.description; (Create date : @auction.createDate,<br> Start date : @auction.openDate,<br> Close date: @auction.closeDate)<br>
                    Price : @auction.currentPrice;
                </div>
                <div class="card-footer">
                    <a href="/Home/GetInfoAuction/@auction.Id" type="button" class="btn btn-info">Info</a>
                </div>
            </div>
        </div>
    }
   </div>
  </div>
</div>
}
else{
    <h1>You havent won any auctions.</h1>
}
