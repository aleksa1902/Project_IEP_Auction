@model ProjectIepAuction.Models.View.CreateAuctionModel
@{
    ViewData["Title"] = "Create auction";
}

<h1>Create auction</h1><hr>

<div class="row">
    <div class="col-xl-4"></div>
    <div class="col-xl-4">
        <form asp-controller="User" asp-action="CreateAuction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea class="form-control" asp-for="description" rows="3"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startPrice" class="control-label"></label>
                <input asp-for="startPrice" class="form-control" />
                <span asp-validation-for="startPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="openDate" class="control-label"></label>
                <input asp-for="openDate" type="date" class="form-control datepicker" value = "@Model.openDate.ToString()" />
                <span asp-validation-for="openDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label asp-for="openHour" class="control-label"></label>
                        <input asp-for="openHour" class="form-control" max="23" min="0"/>
                        <span asp-validation-for="openHour" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="openMinute" class="control-label"></label>
                        <input asp-for="openMinute" class="form-control" max="59" min="0"/>
                        <span asp-validation-for="openMinute" class="text-danger"></span>
                    </div>
                </div> 
            </div>
            <div class="form-group">
                <label asp-for="closeDate" class="control-label"></label>
                <input asp-for="closeDate" type="date" class="form-control datepicker" value = "@Model.openDate.ToString()" />
                <span asp-validation-for="closeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label asp-for="closeHour" class="control-label"></label>
                        <input asp-for="closeHour" class="form-control" max="23" min="0"/>
                        <span asp-validation-for="closeHour" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="closeMinute" class="control-label"></label>
                        <input asp-for="closeMinute" class="form-control" max="59" min="0"/>
                        <span asp-validation-for="closeMinute" class="text-danger"></span>
                    </div>
                </div> 
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input type="file" asp-for="image" class="form-control" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add auction" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>